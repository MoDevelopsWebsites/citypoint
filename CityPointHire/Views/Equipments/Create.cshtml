@model CityPointHire.Models.Equipment

@{
    ViewData["Title"] = "Add Equipment";
}

<div class="container py-5">
    <h2 class="mb-4">Add New Equipment</h2>

    <form asp-action="Create">
        <div class="mb-3">
            <label asp-for="EquipmentName" class="form-label"></label>
            <input asp-for="EquipmentName" class="form-control" />
            <span asp-validation-for="EquipmentName" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input" asp-for="Availability" />
            <label class="form-check-label" asp-for="Availability"></label>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
