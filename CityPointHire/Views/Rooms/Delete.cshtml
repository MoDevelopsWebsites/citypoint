@model CityPointHire.Models.Room

@{
    ViewData["Title"] = "Delete Room";
}

<style>
    .delete-hero {
        background: linear-gradient(135deg, #6b1d1d 0%, #a83232 100%);
        padding: 60px 0;
        text-align: center;
        color: white;
        margin-bottom: 40px;
    }

        .delete-hero h1 {
            font-size: 2.5rem;
            font-weight: 700;
        }

    .delete-card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        max-width: 600px;
        margin: 0 auto;
        overflow: hidden;
    }

    .delete-warning {
        background: #fff3cd;
        padding: 20px;
        text-align: center;
        font-weight: 600;
        color: #856404;
        font-size: 1.05rem;
    }

    .delete-body {
        padding: 32px;
    }

        .delete-body h3 {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1a1a2e;
            margin-bottom: 20px;
        }

    .detail-row {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        border-bottom: 1px solid #eee;
    }

        .detail-row:last-child {
            border-bottom: none;
        }

    .detail-label {
        font-weight: 600;
        color: #1a1a2e;
    }

    .detail-value {
        color: #555;
    }

    .delete-actions {
        display: flex;
        gap: 12px;
        justify-content: center;
        margin-top: 28px;
    }

    .btn-delete-confirm {
        padding: 12px 28px;
        background: #dc3545;
        color: white;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: opacity 0.2s ease;
    }

        .btn-delete-confirm:hover {
            opacity: 0.85;
        }

    .btn-cancel {
        padding: 12px 28px;
        border: 2px solid #0f3460;
        color: #0f3460;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
    }

        .btn-cancel:hover {
            background: #0f3460;
            color: white;
        }
</style>

<div class="delete-hero">
    <h1>⚠️ Delete Room</h1>
</div>

<div class="container">
    <div class="delete-card">
        <div class="delete-warning">
            ⚠️ Are you sure you want to delete this? This action cannot be undone.
        </div>
        <div class="delete-body">
            <h3>@Html.DisplayFor(model => model.RoomName)</h3>

            <div class="detail-row">
                <span class="detail-label">👥 Capacity</span>
                <span class="detail-value">@Html.DisplayFor(model => model.Capacity) people</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">🛠 Facilities</span>
                <span class="detail-value">@Html.DisplayFor(model => model.Facilities)</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">💰 Price</span>
                <span class="detail-value">£@Model.Price.ToString("F2") / hour</span>
            </div>

            <div class="delete-actions">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="RoomID" />
                    <button type="submit" class="btn-delete-confirm">🗑 Yes, Delete</button>
                </form>
                <a asp-action="Index" class="btn-cancel">← Back to List</a>
            </div>
        </div>
    </div>
</div>
