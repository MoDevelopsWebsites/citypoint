@model IEnumerable<CityPointHire.Models.Room>

@{
    ViewData["Title"] = "Our Rooms";
}

<style>
    .rooms-hero {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
        padding: 60px 0;
        text-align: center;
        color: white;
        margin-bottom: 40px;
    }
    .rooms-hero h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 10px;
    }
    .rooms-hero p {
        font-size: 1.1rem;
        opacity: 0.85;
    }
    .room-card {
        border: none;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
    }
    .room-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 12px 30px rgba(0,0,0,0.15);
    }
    .card-img-placeholder {
        height: 180px;
        background: linear-gradient(135deg, #0f3460, #533483);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
    }
    .room-card .card-body {
        padding: 24px;
    }
    .room-card .card-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: #1a1a2e;
        margin-bottom: 16px;
    }
    .room-info {
        display: flex;
        flex-direction: column;
        gap: 8px;
        margin-bottom: 20px;
        flex-grow: 1;
    }
    .room-info-item {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.95rem;
        color: #555;
    }
    .room-info-item strong {
        color: #1a1a2e;
        min-width: 80px;
    }
    .room-price {
        font-size: 1.5rem;
        font-weight: 700;
        color: #0f3460;
        margin-bottom: 16px;
    }
    .room-price span {
        font-size: 0.85rem;
        font-weight: 400;
        color: #888;
    }
    .btn-details {
        display: inline-block;
        padding: 10px 24px;
        background: linear-gradient(135deg, #0f3460, #533483);
        color: white;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: opacity 0.2s ease;
        text-align: center;
    }
    .btn-details:hover {
        opacity: 0.9;
        color: white;
    }
    .btn-create {
        display: inline-block;
        padding: 12px 28px;
        background: linear-gradient(135deg, #0f3460, #533483);
        color: white;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        transition: opacity 0.2s ease;
    }
    .btn-create:hover {
        opacity: 0.9;
        color: white;
    }
    .card-actions {
        display: flex;
        gap: 8px;
        margin-top: 12px;
        flex-wrap: wrap;
    }
    .card-actions a {
        padding: 6px 14px;
        border-radius: 6px;
        text-decoration: none;
        font-size: 0.85rem;
        font-weight: 600;
        transition: opacity 0.2s ease;
    }
    .btn-edit {
        background: #ffc107;
        color: #1a1a2e;
    }
    .btn-delete {
        background: #dc3545;
        color: white;
    }
    .btn-edit:hover, .btn-delete:hover, .btn-details:hover {
        opacity: 0.85;
    }
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #888;
    }
    .empty-state h3 {
        font-size: 1.5rem;
        color: #1a1a2e;
        margin-bottom: 10px;
    }
</style>

<div class="rooms-hero">
    <h1>🏢 Our Rooms</h1>
    <p>Find the perfect space for your meetings, events, and workshops</p>
</div>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold" style="color: #1a1a2e;">Available Rooms</h2>
        <a asp-action="Create" class="btn-create">+ Create New</a>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card room-card">
                        <div class="card-img-placeholder">🏢</div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.RoomName)</h5>
                            <div class="room-info">
                                <div class="room-info-item">
                                    <strong>👥 Capacity:</strong> @Html.DisplayFor(modelItem => item.Capacity) people
                                </div>
                                <div class="room-info-item">
                                    <strong>🛠 Facilities:</strong> @Html.DisplayFor(modelItem => item.Facilities)
                                </div>
                            </div>
                            <div class="room-price">
                                £@item.Price.ToString("F2") <span>/ hour</span>
                            </div>
                            <div class="card-actions">
                                <a asp-action="Details" asp-route-id="@item.RoomID" class="btn-details">Details</a>
                                <a asp-action="Edit" asp-route-id="@item.RoomID" class="card-actions a btn-edit">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.RoomID" class="card-actions a btn-delete">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <h3>No rooms available</h3>
            <p>Check back soon or contact an administrator.</p>
        </div>
    }
</div>
