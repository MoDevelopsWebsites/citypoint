@model CityPointHire.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
}

<h1>Book @Model.Room?.RoomName</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">

            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="RoomID" />

            <div class="form-group">
                <label>Room</label>
                <input type="text" class="form-control" value="@Model.Room?.RoomName" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Date"></label>
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Time"></label>
                <input asp-for="Time" type="time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Book</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
