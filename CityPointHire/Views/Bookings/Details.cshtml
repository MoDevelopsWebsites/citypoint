@model CityPointHire.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<h1>Booking Details</h1>

<hr />

<dl class="row">
    <dt class="col-sm-3">Room</dt>
    <dd class="col-sm-9">@Model.Room?.RoomName</dd>

    <dt class="col-sm-3">Date</dt>
    <dd class="col-sm-9">@Model.Date.ToShortDateString()</dd>

    <dt class="col-sm-3">Time</dt>
    <dd class="col-sm-9">@Model.Time</dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@Model.Status</dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model.BookingID" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>
