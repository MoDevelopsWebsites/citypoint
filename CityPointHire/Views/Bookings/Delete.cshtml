@model CityPointHire.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h1>Delete Booking</h1>

<h3>Are you sure you want to delete this booking?</h3>

<hr />

<dl class="row">
    <dt class="col-sm-3">Room</dt>
    <dd class="col-sm-9">@Model.Room?.RoomName</dd>

    <dt class="col-sm-3">Date</dt>
    <dd class="col-sm-9">@Model.Date.ToShortDateString()</dd>

    <dt class="col-sm-3">Time</dt>
    <dd class="col-sm-9">@Model.Time</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="BookingID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
