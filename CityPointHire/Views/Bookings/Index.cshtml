@model Tuple<IEnumerable<CityPointHire.Models.Room>, IEnumerable<CityPointHire.Models.Booking>>

@{
    ViewData["Title"] = "Bookings";
    var availableRooms = Model.Item1;
    var myBookings = Model.Item2;
}

<style>
    .bookings-hero {
        background: linear-gradient(135deg, #1e3a5f 0%, #2d5a87 50%, #3d7ab5 100%);
        padding: 4rem 2rem;
        border-radius: 1.5rem;
        margin-bottom: 3rem;
        position: relative;
        overflow: hidden;
    }

        .bookings-hero::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 400px;
            height: 400px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 50%;
        }

        .bookings-hero h1 {
            color: #ffffff;
            font-weight: 700;
            margin-bottom: 1rem;
            position: relative;
            z-index: 1;
        }

        .bookings-hero p {
            color: rgba(255, 255, 255, 0.85);
            font-size: 1.1rem;
            max-width: 600px;
            margin: 0 auto;
            position: relative;
            z-index: 1;
        }

    .room-card {
        border: none;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        height: 100%;
    }

        .room-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
        }

        .room-card .card-img-placeholder {
            height: 180px;
            background: linear-gradient(135deg, #e8eef5 0%, #d4dfe9 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #8aa4c0;
            font-size: 3rem;
        }

        .room-card .card-body {
            padding: 1.5rem;
        }

        .room-card .card-title {
            font-weight: 700;
            font-size: 1.25rem;
            color: #1e3a5f;
            margin-bottom: 0.75rem;
        }

        .room-card .card-text {
            color: #5a6f85;
            font-size: 0.9rem;
            line-height: 1.6;
            margin-bottom: 1.25rem;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

    .booking-info {
        background: #f8fafc;
        border-radius: 0.75rem;
        padding: 1rem;
        margin-bottom: 1.25rem;
    }

    .booking-info-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.4rem 0;
        font-size: 0.875rem;
        color: #4a5e72;
    }

        .booking-info-item:not(:last-child) {
            border-bottom: 1px solid #e8eef5;
        }

        .booking-info-item .icon {
            width: 20px;
            text-align: center;
        }

        .booking-info-item .label {
            font-weight: 600;
            color: #1e3a5f;
            min-width: 60px;
        }

    .status-badge {
        display: inline-flex;
        align-items: center;
        padding: 0.25rem 0.75rem;
        border-radius: 2rem;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .status-pending {
        background: #fef3cd;
        color: #856404;
    }

    .status-approved {
        background: #d4edda;
        color: #155724;
    }

    .status-rejected {
        background: #f8d7da;
        color: #721c24;
    }

    .btn-book {
        background: linear-gradient(135deg, #1e3a5f 0%, #2d5a87 100%);
        border: none;
        color: #ffffff;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        font-size: 0.9rem;
        width: 100%;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        text-align: center;
    }

        .btn-book:hover {
            background: linear-gradient(135deg, #2d5a87 0%, #3d7ab5 100%);
            color: #ffffff;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(30, 58, 95, 0.3);
        }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: #f8fafc;
        border-radius: 1rem;
    }

    .empty-state-icon {
        font-size: 4rem;
        margin-bottom: 1.5rem;
    }

    .empty-state h3 {
        color: #1e3a5f;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .empty-state p {
        color: #5a6f85;
    }
</style>
<div class="container py-5">
    <div class="bookings-hero text-center">
        <h1 class="display-5">📅 Book a Room</h1>
        <p>Choose your preferred room and time. All rooms are fully equipped for meetings, events, and workshops.</p>
    </div>

    <!-- Available Rooms -->
    <h3 class="mb-3">Available Rooms</h3>
    @if (availableRooms.Any())
    {
        <div class="row g-4 mb-5">
            @foreach (var room in availableRooms)
            {
                <div class="col-sm-6 col-lg-4">
                    <div class="card room-card">
                        <div class="card-img-placeholder">🏢</div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@room.RoomName</h5>

                            <div class="booking-info">
                                <div class="booking-info-item">
                                    <span class="icon">👥</span>
                                    <span class="label">Capacity:</span>
                                    <span>@room.Capacity</span>
                                </div>
                                <div class="booking-info-item">
                                    <span class="icon">💲</span>
                                    <span class="label">Price:</span>
                                    <span>@room.Price.ToString("C")</span>
                                </div>
                                <div class="booking-info-item">
                                    <span class="icon">🛠️</span>
                                    <span class="label">Facilities:</span>
                                    <span>@room.Facilities</span>
                                </div>
                            </div>

                            <div class="mt-auto">
                                <a asp-controller="Bookings" asp-action="Create" asp-route-roomId="@room.RoomID" class="btn-book">
                                    Book Now
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state mb-5">
            <div class="empty-state-icon">📭</div>
            <h3>No Rooms Available</h3>
            <p>Check back later for available rooms to book.</p>
        </div>
    }

    <!-- My Bookings -->
    <h3 class="mb-3">My Booked Rooms</h3>
    @if (myBookings.Any())
    {
        <div class="row g-4">
            @foreach (var booking in myBookings)
            {
                <div class="col-sm-6 col-lg-4">
                    <div class="card room-card">
                        <div class="card-img-placeholder">🏢</div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@booking.Room?.RoomName</h5>

                            <div class="booking-info">
                                <div class="booking-info-item">
                                    <span class="icon">📅</span>
                                    <span class="label">Date:</span>
                                    <span>@booking.Date.ToString("dd MMM yyyy")</span>
                                </div>
                                <div class="booking-info-item">
                                    <span class="icon">🕐</span>
                                    <span class="label">Time:</span>
                                    <span>@booking.Time</span>
                                </div>
                                <div class="booking-info-item">
                                    <span class="icon">📋</span>
                                    <span class="label">Status:</span>
                                    @{
                                        var status = booking.Status ?? "Pending";
                                        var statusClass = status switch
                                        {
                                            "Approved" => "status-approved",
                                            "Rejected" => "status-rejected",
                                            _ => "status-pending"
                                        };
                                    }
                                    <span class="status-badge @statusClass">@status</span>
                                </div>
                            </div>

                            <div class="mt-auto">
                                <form asp-action="CancelBooking" method="post" onsubmit="return confirm('Are you sure you want to cancel this booking?');">
                                    <input type="hidden" name="bookingId" value="@booking.BookingID" />
                                    <button type="submit" class="btn-book" style="background: #d9534f;">
                                        Cancel Booking
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon">📭</div>
            <h3>No Booked Rooms Yet</h3>
            <p>Your booked rooms will appear here.</p>
        </div>
    }
</div>