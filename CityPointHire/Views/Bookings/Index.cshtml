@model IEnumerable<CityPointHire.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<h1>Bookings</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Booking</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Room</th>
            <th>Date</th>
            <th>Time</th>
            <th>Status</th>
            <th></th>

            @if (User.IsInRole("Staff"))
            {
                <th>Actions (Staff)</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Room?.RoomName</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.Time</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.BookingID">Details</a>

                    @if (User.IsInRole("Staff") || item.UserID == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                    {
                        <span> | </span>
                        <a asp-action="Edit" asp-route-id="@item.BookingID">Edit</a>
                    }
                </td>

                @if (User.IsInRole("Staff"))
                {
                    <td>
                        <a asp-action="Approve" asp-route-id="@item.BookingID" class="btn btn-success btn-sm">Approve</a>
                        <a asp-action="Deny" asp-route-id="@item.BookingID" class="btn btn-warning btn-sm">Deny</a>
                        <a asp-action="Delete" asp-route-id="@item.BookingID" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
