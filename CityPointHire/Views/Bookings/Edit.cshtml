@model CityPointHire.Models.Booking

@{
    ViewData["Title"] = "Edit Booking";
}

<h1>Edit Booking</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="BookingID" />

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="RoomID"></label>
                <select asp-for="RoomID"
                        class="form-control"
                        asp-items="@(ViewData["RoomID"] as SelectList)">
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Date"></label>
                <input asp-for="Date" type="date" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Time"></label>
                <input asp-for="Time" type="time" class="form-control" />
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
